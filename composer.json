{
    "require": {
        "symfony/framework-bundle": "^7.2",
        "symfony/console": "^7.2",
        "symfony/runtime": "^7.2",
        "symfony/dotenv": "^7.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.75",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "DScho\\Backend\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "symfony/runtime": true
        }
    },
    "scripts":  {
        "phpstan": "phpstan analyze",
        "csfix": "PHP_CS_FIXER_IGNORE_ENV=true php-cs-fixer fix",
        "fixall": [
            "@phpstan",
            "@csfix"
        ]
    }
}
